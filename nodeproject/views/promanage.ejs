<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>gramApply</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/3-col-portfolio.css" rel="stylesheet">
    <link rel="stylesheet" href="css/promanage.css">

  </head>
  <body>
<!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="main">gramApply</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <% if(user) {%>
              <li class="nav-item active">
                <h5 style="color:white; margin-top:4px;"><%=user.name%>님</h5>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/logout">로그아웃</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="proinsert">프로그램 등록</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="promanage">프로그램 관리</a>
              </li>
              <%}else{%>
              <li class="nav-item active">
                <a class="nav-link" href="login">로그인</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="signup.html">회원가입</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
      <div class="container">
        <h2 class="my-4">프로그램 관리</h2>

        <form id="form">
          <select name="p_category">
          <option value="특강">특강</option>
          <option value="공모전/경진대회">공모전/경진대회</option>
          <option value="해외연수">해외연수</option>
          <option value="기타">기타</option>
          </select>
          <input class="input" type="text" placeholder="프로그램명을 입력하세요.">
          <button class="btn" type="submit" name="button">검색</button>
        </form>

        <div class="row">
            <table border="1" width="1200" >
              <tr height="40" width="200">
                <td>카테고리</td>
                <td>프로그램 제목</td>
                <td>프로그램 수행기간</td>
                <td>프로그램 수정</td>
                <td>신청서 수정</td>
                <td>삭제</td>
              </tr>
              <% rows.forEach(function(data,index){ %>
                <tr height="30">
                  <td><%=data.p_category%></td>
                  <td><%=data.p_name%></td>
                  <td><%=data.p_start%>~<%=data.p_end%></td>
                  <td><button class="btn" type="button" onclick="location.href='pro_edit?p_code=<%=data.p_code%>'"><img class="btn-img" src="images/write.png"></button></td>
                  <td><button class="btn" type="button" onclick="location.href='pro_editor_update?p_code=<%=data.p_code%>'"><img class="btn-img" src="images/write.png"></button></td>
                  <td><button class="btn" type="button" onclick="location.href='pro_delete?p_code=<%=data.p_code%>'"><img class="btn-img" src="images/delete.png"></button></td>
                </tr>
             <% }); %>
            </table>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container -->
  </body>
</html>
